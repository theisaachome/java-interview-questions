package com.isaachome.pattern;

public class PyramidProgram {

	public static void main(String[] args) {
		prinPyramidPattern(5);
	}
	public static void prinPyramidPattern(int n) {
		
		for(int i=0; i<n;i++) {
			System.out.print(" ");
			for(int j=0;j<=i;j++) {
				System.out.print("* ");
			}
			 System.out.println(); //ending line after each row
		}
	}
}
