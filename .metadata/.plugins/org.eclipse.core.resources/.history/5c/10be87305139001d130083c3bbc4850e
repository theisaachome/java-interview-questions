package com.isaachome.numberprogram;

import java.util.Scanner;

public class BuzzProgram {

	static Scanner sc = new Scanner(System.in);

	public static void main(String[] args) {

		if (checkBuzzNumber(17)) {
			System.out.println("Fuzz number.");
		} else {
			System.out.println("Not Fuzz Number.");
		}
		fizzBuzz(20);
	}

	static boolean checkBuzzNumber(int num) {
		// check whether the number ends with 7,
		// is divisible by 7 or not
		if (num % 7 == 0 || num % 10 == 7) {
			return true;
		}
		return false;
	}

	static void fizzBuzz(int nums) {
		for (int i = 1; i <= nums; i++) {
			if (i % (3 * 5) == 0) {
				System.out.println("FizzBuzz");
			} else if (i % 5 == 0) {
				System.out.println("Fizz");
			} else if (i % 3 == 0) {
				System.out.println("Buzz");
			}
			else {
				System.out.println(i);
			}
		}
	}
	
	static void checkBuzzBetween() {
		int start,end;
		System.out.print("Enter Start : \n");
		start=sc.nextInt();
		System.out.print("Enter end : \n");
		end = sc.nextInt();
		for(int i=start;i<=end;i++) {
			if(i%10==7 || i%7==0) {
				System.out.println(i+ " is Fuzz.");
			}else {
				System.out.println(i);
			}
		}
	}
}
